<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZuydLuister.EditAdministratorPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="emailEntry" Placeholder="Voer een e-mailadres in..."/>
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="Hoofdbeheerder" VerticalOptions="CenterAndExpand"/>
                <CheckBox x:Name="masterAdminCheckBox" VerticalOptions="CenterAndExpand"/>
            </StackLayout>
            <Button x:Name="saveAdminButton" Text="Sla beheerder op" Clicked="saveAdminButton_Clicked"/>
            <Button x:Name="deleteAdminButton" Text="Verwijder beheerder" Clicked="deleteAdminButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="menuToolbarItem" Text="Menu" Clicked="menuToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
</ContentPage>
