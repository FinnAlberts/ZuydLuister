<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZuydLuister.NewSavegamePage">

    <StackLayout>
        <Entry x:Name="savegameNameEntry" Placeholder="Naam..."/>
        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
            <Label Text="Wachtwoord?"/>
            <CheckBox CheckedChanged="CheckBox_CheckedChanged"/>
        </StackLayout>
        <Entry x:Name="savegamePasswordEntry" Placeholder="Wachtwoord..." IsPassword="True" IsVisible="False"/>
        <Entry x:Name="confirmSavegamePasswordEntry" Placeholder="Bevestig wachtwoord..." IsPassword="True" IsVisible="False"/>
        <Label Text="Instructies:"/>
        <Label Text="Hier staan de instructies voor het spel"/>
        <Button x:Name="startButton" Text="Start" Clicked="startButton_Clicked"/>
    </StackLayout>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="menuToolbarItem" Text="Menu" Clicked="menuToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
</ContentPage>
