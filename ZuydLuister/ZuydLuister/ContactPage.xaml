<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZuydLuister.ContactPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="emailEntry" Placeholder="Emailadres..."/>
            <Editor x:Name="emailEditor" Placeholder="Typ hier je bericht..." HeightRequest="250"/>
            <Button x:Name="sendEmailButton" Text="Verzend bericht" Clicked="sendEmailButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>