<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZuydLuister.LoginPage">

    <StackLayout>
        <Label Text="Welkom bij Zuyd L U I S T E R" FontSize="Title"/>
        <Label Text="Log in met je Zuyd-account"/>
        <Entry x:Name="UsernameEntry" Placeholder="Gebruikersnaam"/>
        <Entry x:Name="PasswordEntry" Placeholder="Wachtwoord" IsPassword="True"/>
        <Button x:Name="LoginButton" Text="Inloggen" Clicked="LoginButton_Clicked"/>
    </StackLayout>
</ContentPage>