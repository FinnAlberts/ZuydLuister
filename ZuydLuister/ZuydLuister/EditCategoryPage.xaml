<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZuydLuister.EditCategoryPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="nameEntry" Placeholder="Voer een categorienaam in..."/>
            <Button x:Name="saveButton" Text="Sla categorie op" Clicked="saveButton_Clicked"/>
            <Button x:Name="deleteButton" Text="Verwijder categorie" Clicked="deleteButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="menuToolbarItem" Text="Menu" Clicked="menuToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
</ContentPage>
