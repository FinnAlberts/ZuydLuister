<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZuydLuister.ScenariosOverviewPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="scenarioListView" ItemSelected="scenarioListView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding ScenarioName}" TextColor="{StaticResource TextColor}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:Name="newScenarioButton" Text="Nieuw Scenario Toevoegen" Clicked="newScenarioButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>