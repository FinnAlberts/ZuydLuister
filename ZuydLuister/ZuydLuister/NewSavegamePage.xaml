<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZuydLuister.NewSavegamePage">

    <StackLayout>
        <Entry x:Name="SavegameNameEntry" Placeholder="Naam..."/>
        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
            <Label Text="Wachtwoord?"/>
            <CheckBox/>
        </StackLayout>
        <Entry x:Name="SavegamePasswordEntry" Placeholder="Wachtwoord..." IsPassword="True"/>
        <Entry x:Name="ConfirmSavegamePasswordEntry" Placeholder="Bevestig wachtwoord..." IsPassword="True"/>
        <Label Text="Instructies:"/>
        <Label Text="Hier staan de instructies voor het spel"/>
        <Button x:Name="StartButton" Text="Start" Clicked="StartButton_Clicked"/>
    </StackLayout>
</ContentPage>