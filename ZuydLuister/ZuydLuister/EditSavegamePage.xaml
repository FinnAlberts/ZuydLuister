<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZuydLuister.EditSavegamePage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="SavegameNameEntry" Placeholder="Naam..."/>
            <Label Text="Wachtwoord?"/>
            <CheckBox/>
            <Entry x:Name="SavegamePasswordEntry" Placeholder="Wachtwoord..." IsPassword="True"/>
            <Entry x:Name="ConfirmSavegamePasswordEntry" Placeholder="Bevestig wachtwoord..." IsPassword="True"/>
            <Button x:Name="saveEditSavegameButton" Text="Opslaan" Clicked="saveEditSavegameButton_Clicked"/>
            <Button x:Name="deleteSavegameButton" Text="Verwijder savegame" Clicked="deleteSavegameButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="menuToolbarItem" Text="Menu" Clicked="menuToolbarItem_Clicked"/>
        <ToolbarItem x:Name="backToolbarItem" Text="Back" Clicked="backToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
</ContentPage>